FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build-env
WORKDIR /app
# Copy csproj and restore as distinct layers
COPY src/Api/Moap.ApartmentApi ./Api/Moap.ApartmentApi
COPY src/Share ./Share

# Copy everything else and build
RUN dotnet restore Api/Moap.ApartmentApi/Moap.ApartmentApi.csproj

RUN dotnet publish Api/Moap.ApartmentApi/Moap.ApartmentApi.csproj -c Release -o out
# Build runtime image
FROM mcr.microsoft.com/dotnet/core/aspnet:3.1.3-alpine3.11
WORKDIR /app
COPY --from=build-env /app/out .
ENTRYPOINT ["dotnet", "Moap.ApartmentApi.dll"]